{% extends 'base.html.twig' %}

{% block body %}
    <section class="d-flex flex-row-reverse m-5" >
        <ul>
            <li class="list-unstyled">Nous sommes le </li>
            <li class="list-unstyled">Bienvenue,{{ app.user.identifiant }}</li>
        </ul>
    </section>

    <div class="container homeBox flex-row">
        <!--LISTE DEROULANTE CAMPUS-->
        <div class="container col-5">
            <h2>Campus :</h2>
            <div class="listField"">
                <select>
                    <option></option>
                    <option>Strasbourg</option>
                    <option>Rennes</option>
                    <option>Toulouse</option>
                </select>
            </div>
            <!--BARRE DE RECHERCHE-->
            <div class="topnav">
                <input type="text" placeholder="Search..">
            </div>
        </div>

        <div class="container flex-column col-5">
    <!--CHECKBOXES-->
            <h1> Filtrer les sorties </h1>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="organisateurCoche" name="organisateurCoche" />
                <label class="form-check-label" for="Organisateur">Sorties dont je suis l'organisateur/trice</label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="inscritCoche" name="inscritCoche"/>
                <label class="form-check-label" for="inscrit">Sorties auxquelles je suis inscrit/e</label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="pasInscritCoche" name="pasInscritCoche"/>
                <label class="form-check-label" for="pasInscrit">Sorties auxquelles je ne suis pas inscrit/e</label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="sortiesPasseesCoche" name="sortiesPasseesCoche"/>
                <label class="form-check-label" for="sortiesPassees">Sorties passées</label>
            </div>
        </div>
        <div class="container col-2">
            <button type="submit" class="col">Rechercher</button>
        </div>
    </div>


<!--TABLEAU DE SORTIES-->
        {# Boucle sur le tableau de sortie #}
        {% for sortie in sorties %}
            <tr >
                <td class="border">
                    {{ sortie.nom }}
                </td>
            </tr>




        {% endfor %}
        <button type="submit">Créer une sortie</button>





{% endblock %}
{% block footer %}{%endblock%}

