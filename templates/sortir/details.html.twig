{% extends 'base.html.twig' %}

{% block title %}
    {{ sortie.nom }}| {{ parent() }}
{% endblock %}

{% block body %}
    <div>
        <h2 class="text-center">Afficher une sortie</h2>
        <div class="container">
            <div class="col-10 container sortieDetails">
                <div class="row">
                    <p class="col-3">Nom de la sortie :</p>
                    <div class="col-3">{{ sortie.nom }}</div>
                    <p class="col-3">Campus :</p>
                    <div class="col-3">{{ sortie.campus.nom }}</div>
                </div>
                </div>
                <div class="row">
                    <p class="col-3">Date et heure de la sortie :</p>
                    <div class="col-3">{{ sortie.dateHeureDebut.format('Y-m-d') }}</div>
                    <p class="col-3">Lieu :</p>
                    <div class="col-3">{{ sortie.lieu.nom }}</div>
                </div>
                <div class="row">
                    <p class="col-3">Date limite d'inscription :</p>
                    <div class="col-3">{{ sortie.dateLimiteInscription.format('Y-m-d') }}</div>
                    <p class="col-3">Rue :</p>
                    <div class="col-3">{{ sortie.lieu.rue }}</div>
                </div>
                <div class="row">
                    <p class="col-3">Nombre de place :</p>
                    <div class="col-3">{{ sortie.nbInscriptionsMax }}</div>
                    <p class="col-3">Code postal :</p>
                    <div class="col-3">{{ sortie.lieu.ville.codePostal }}</div>
                </div>
                <div class="row">
                    <p class="col-3">Dur√©e :</p>
                    <div class="col-3">{{ sortie.duree }} minutes</div>
                    <p class="col-3">Latitude :</p>
                    <div class="col-3">{{ sortie.lieu.latitude }}</div>
                </div>
                <div class="row">
                    <p class="col-3">Description et info :</p>
                    <div class="col-3">{{ sortie.infosSortie }}</div>
                    <p class="col-3">Longitude :</p>
                    <div class="col-3">{{ sortie.lieu.longitude }}</div>
                </div>
            </div>
        </div>

    <div class="container">
        <h4 class="text-left titreParticipants">Liste des participants inscrits :</h4>
        <div class="col-6 container sortieParticipants">
            <div class="row">
                <table>
                    <thead>
                        <tr>
                            <td>Pseudo</td>
                            <td>Nom</td>
                        </tr>
                    </thead>
                    <tbody>

                        {% for participant in sortie.participants %}
                            <tr>
                                <td>{{ participant.identifiant }}</td>
                                <td>{{ participant.nom }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>


{% endblock %}

{% block extrastyles %}
    <style>
        body {
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
{% endblock %}